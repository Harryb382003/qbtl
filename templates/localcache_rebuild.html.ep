% layout 'main';
% title 'Rebuild local cache';

<h1>Rebuild local cache</h1>
% my $ts = stash('local_cache_mtime') || 0;
% my $pretty = $ts ? scalar(localtime($ts)) : 'never';

<form method="post" action="/localcache/rebuild">
  <button type="submit">
    Rebuild Cache<br>
    <small>Last: <%= $pretty %></small>
  </button>
</form>
