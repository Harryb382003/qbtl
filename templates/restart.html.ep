% layout 'main';
% title 'QBTL';

<p>Restartingâ€¦ (this page will jump back to the dashboard automatically)</p>

<script>
(async function () {
  const sleep = (ms) => new Promise(r => setTimeout(r, ms));

  while (true) {
    try {
      const r = await fetch('/health', { cache: 'no-store' });
      if (r.ok) {
        window.location.href = '/';
        return;
      }
    } catch (e) {}
    await sleep(400);
  }
})();
</script>
